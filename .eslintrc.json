{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard-with-typescript",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "max-len": [
            "error",
            {
                "code": 80,
                "ignoreTrailingComments": true,
                "ignoreUrls": true
            }
        ]
    },
    "ignorePatterns": [
        "*.config.js"
    ]
}